#include <iostream>
#include <vector>
using namespace std;

struct kraw{
    int v1;
    int v2;
    int w;

    edge(int t1, int t2, int tw=1)
    {
        v1=t1;
        v2=t2;
        w=tw;
    }

};

void listasasiadow(int m, vector<int> *tab)
{
    kraw k;
    for(int i=0;i<m;i++)
    {
        cin>>k.v1>>k.v2;
        tab[k.v1].push_back(k.v2);
        tab[k.v2].push_back(k.v1);
    }
}

void pokaliste(int n,vector<int> *tab)
{
    for(int j=0;j<n;j++)
    {
        cout<<j <<": ";
        for(auto i = tab[j].begin();i!=tab[j].end();i++)
            {
                cout<<*i<<" ";
            }
            cout<<endl;
    }

}

int main()
{
    int n,m;
    cin>>n>>m;
    vector <int> tab[n];
    listasasiadow(m,tab);
    pokaliste(n,tab);
}
